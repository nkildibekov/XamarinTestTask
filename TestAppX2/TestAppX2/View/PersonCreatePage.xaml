<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestAppX2.View.PersonCreatePage" Title="Contact create">
    <StackLayout>
        <StackLayout x:Name="personCreateStack">
            <Label Text="First Name" />
            <Entry Text="{Binding FirstName}" FontSize="Medium" />
            <Label Text="Last Name" />
            <Entry Text="{Binding LastName}" FontSize="Medium" />
            <Label Text="Phone number" />
            <Entry Text="{Binding PhoneNumber}" FontSize="Medium" />
            <Button x:Name="SaveButton" IsVisible="true" Text="Save" Command="{Binding ListViewModel.SavePersonCommand}" CommandParameter="{Binding}" />

        </StackLayout>
    </StackLayout>
</ContentPage>